<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="drupal_core">
  <arg name="extensions" value="inc,install,module,php,profile,test,theme,yml"/>
  <description>Default PHP CodeSniffer configuration for Drupal core.</description>

  <file>.</file>

  <rule ref="Drupal">
    <exclude name="Drupal.Commenting"/>
    <exclude name="Drupal.NamingConventions.ValidFunctionName.InvalidPrefix"/>
    <exclude name="Drupal.Classes.ClassCreateInstance.ParenthesisMissing"/>
    <exclude name="Drupal.Classes.ClassFileName.NoMatch"/>
  </rule>

  <rule ref="DrupalPractice">
    <exclude name="DrupalPractice.CodeAnalysis"/>
    <exclude name="DrupalPractice.Objects.UnusedPrivateMethod"/>
    <exclude name="DrupalPractice.InfoFiles.NamespacedDependency"/>
    <exclude name="DrupalPractice.General.DescriptionT.DescriptionT"/>
    <exclude name="DrupalPractice.Yaml.RoutingAccess.PermissionFound"/>
    <exclude name="DrupalPractice.General.OptionsT.TforValue"/>
    <exclude name="DrupalPractice.Constants.GlobalConstant.GlobalConstant"/>
    <exclude name="DrupalPractice.Objects.GlobalDrupal.GlobalDrupal"/>
  </rule>

</ruleset>
