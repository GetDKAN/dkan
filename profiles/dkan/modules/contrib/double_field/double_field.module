      '#type' => 'select',
      '#title' => t('Size'),
      '#default_value' => $settings[$subfield]['size'],
      '#required' => TRUE,
      '#options' => $size_options,
      '#disabled' => $has_data,
      '#states' => array(
        'visible' => array(
          ":input[name='field[settings][$subfield][type]']" => array(
            array('value' => 'int'),
            array('value' => 'float'),
