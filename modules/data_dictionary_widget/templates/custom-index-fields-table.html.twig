<table>
  <thead>
    <tr>
      <th>{{ header[0] }}</th>
      <th>{{ header[1] }}</th>
      <th colspan="2">{{ header[2] }}</th>
    </tr>
  </thead>
  <tbody  id="field-json-metadata-index-edit-field">
    {% for row in rows %}
        {% if row.field_collection %}
        <tr>
          <td colspan="4">
            {{ row.field_collection }}
          </td>
        </tr>
        {% elseif row.name %}
        <tr>
          <td>{{ row.name }}</td>
          <td>{{ row.length }}</td>
          <td>
          {{ row.edit_index_button }}
          {# {{ row.edit_index_fields_button }} #}
          </td>
        </tr>
      {% endif %}
    {% endfor %}
  </tbody>
</table>
