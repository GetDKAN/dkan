<?php

/**
 * @file
 * Code for the DKAN Data Dictionary csv module.
 */

use Dkan\DataDictionary\CsvDataDictionary;

/**
 * Implements hook_xautoload().
 */
function dkan_data_dictionary_csv_xautoload($adapter) {
  $adapter->absolute()->addPsr4(
    'Dkan\DataDictionary\\',
    drupal_get_path("module", "dkan_data_dictionary_csv") . '/src'
  );
}

/**
 * Implements hook_dkan_data_dictionary_validator().
 */
function dkan_data_dictionary_csv_dkan_data_dictionaries() {
  $dataDictionary = new CsvDataDictionary('dkan_data_dictionary_csv_plain', 'Plain CSV (No validation)', array('csv'));

  return array('dkan_data_dictionary_csv_plain' => $dataDictionary);
}
