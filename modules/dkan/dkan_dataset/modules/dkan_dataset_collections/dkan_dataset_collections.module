<?php

/**
 * @file
 * Code for the DKAN Collections feature.
 */

 include_once 'dkan_dataset_collections.features.inc';

/**
 * Implements hook_panels_pane_content_alter().
 */
function dkan_dataset_collections_panels_pane_content_alter($content, $pane, $args, $contexts) {
  if ($pane->panel === 'contentmain' && $content->content['#node']->type === 'dataset') {
    // This is where we plug in collection children on collection parents.
    $collection = views_embed_view('collection_parent', 'panel_pane_1');
    $content->content['#prefix'] = $collection;
  }
}
